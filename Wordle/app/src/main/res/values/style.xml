<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="filaLetras">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="letra">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:text">" "</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="botonesLetras">
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="wordle">
        <item name="android:fontFamily">@font/designer</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#4CAF50</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
</resources>
